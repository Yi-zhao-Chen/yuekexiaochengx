.container { padding: 24rpx; background: #fafcff; min-height: 100vh;}
.week-bar {display:flex;align-items:center;gap:24rpx;margin-bottom:24rpx;}
.copy-btn, .save-btn {background:#4b6cff;color:#fff;border-radius:8rpx;padding:8rpx 20rpx;}
.days-bar {display:flex;flex-wrap:wrap;gap:12rpx;margin-bottom:24rpx;}
.day-item {background:#e7f1ff;padding:12rpx 18rpx;border-radius:8rpx;min-width:120rpx;text-align:center;}
.day-item.active {background:#4b6cff;color:#fff;}
.edit-title {font-size:32rpx;font-weight:bold;color:#4b6cff;margin-bottom:12rpx;}
.lesson-row {background:#fff;border-radius:8rpx;box-shadow:0 2rpx 8rpx rgba(0,0,0,0.04);margin-bottom:10rpx;padding:18rpx;}
.lesson-form {background:#fff;padding:18rpx;border-radius:8rpx;margin-top:12rpx;display:flex;flex-direction:column;gap:10rpx;}
.input {height:60rpx;border:1rpx solid #eaeaea;border-radius:8rpx;padding:0 12rpx;font-size:26rpx;}
.picker-text {font-size:26rpx;color:#333;}
.add-btn {background:#6ed0fa;color:#fff;border-radius:8rpx;height:60rpx;font-size:28rpx;}