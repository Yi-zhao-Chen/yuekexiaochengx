.my-container {
  display: flex;
  flex-direction: column;
  padding: 20rpx 19rpx;
  background-color: #fff;
}

.week-switch-bar {
  display: flex;
  gap: 18rpx;
  margin-bottom: 20rpx;
}
.week-btn {
  flex: 1;
  background: #f7f7fa;
  color: #753a88;
  border-radius: 22rpx;
  font-size: 30rpx;
  padding: 12rpx 0;
}
.week-btn.active {
  background: linear-gradient(90deg,#753a88,#f2c2ff);
  color: #fff;
}
.copy-bar {
  margin-bottom: 18rpx;
}
.copy-bar button {
  background: #e9d6ff;
  color: #753a88;
  border-radius: 16rpx;
}
.copy-tip {
  color: #aaa;
  margin-top: 6rpx;
  font-size: 24rpx;
}
.date-type-bar {
  margin-bottom: 12rpx;
}
.date-type-btn {
  margin-right: 12rpx;
  padding: 8rpx 28rpx;
  border-radius: 12rpx;
  background: #f7f7fa;
  color: #753a88;
  font-size: 28rpx;
}
.date-type-btn.active {
  background: #753a88;
  color: #fff;
}
.lesson-list {
  margin-bottom: 20rpx;
}
.lesson-card {
  background: #f4f1fa;
  border-radius: 12rpx;
  margin-bottom: 14rpx;
  padding: 18rpx;
  box-shadow: 0 2rpx 8rpx #eee;
  font-size: 26rpx;
}
.add-lesson-form {
  background: #f7f7fa;
  border-radius: 18rpx;
  padding: 22rpx;
  margin-bottom: 28rpx;
}
.form-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #753a88;
  margin-bottom: 12rpx;
}
.form-row {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
  gap: 16rpx;
}
.form-row text {
  min-width: 60rpx;
  color: #555;
  font-size: 26rpx;
}
.form-row input {
  background: #fff;
  border-radius: 8rpx;
  border: 1px solid #eee;
  padding: 8rpx 16rpx;
  font-size: 24rpx;
}