.container {
  padding: 24rpx;
  background: #f7f8fa;
  min-height: 100vh;
}
.form-card {
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.05);
  padding: 32rpx;
  margin-bottom: 32rpx;
}
.form-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #4b6cff;
  margin-bottom: 24rpx;
  text-align: center;
}
.form-row {
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
}
.input {
  flex: 1;
  height: 80rpx;
  border: 1rpx solid #eaeaea;
  border-radius: 8rpx;
  padding: 0 16rpx;
  font-size: 28rpx;
  background: #f5f6fa;
}
.picker {
  flex: 1;
}
.picker-text {
  font-size: 28rpx;
  color: #333;
  padding-left: 8rpx;
}
.primary-btn {
  width: 100%;
  height: 80rpx;
  background: linear-gradient(90deg, #4b6cff 0%, #6ed0fa 100%);
  color: #fff;
  font-size: 32rpx;
  border-radius: 8rpx;
  border: none;
  margin-top: 8rpx;
}
.add-card-btn {
  width: 100%;
  height: 60rpx;
  background: #6ed0fa;
  color: #fff;
  border-radius: 8rpx;
  font-size: 28rpx;
  margin-bottom: 10rpx;
}
.card-title {
  font-size: 28rpx;
  color: #4b6cff;
  margin-bottom: 8rpx;
}
.card-list {
  margin-bottom: 16rpx;
}
.card-item {
  padding: 12rpx 0;
  display: flex;
  align-items: center;
  font-size: 26rpx;
}
.delete-card-btn {
  background: #ff5757;
  color: #fff;
  border-radius: 8rpx;
  font-size: 22rpx;
  margin-left: 16rpx;
}
.list-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
  margin-left: 8rpx;
}
.list-scroll {
  max-height: 900rpx;
}
.list-item {
  background: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 16rpx rgba(0,0,0,0.04);
  margin-bottom: 20rpx;
  padding: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.info-main {
  flex: 1;
}
.name {
  font-size: 32rpx;
  font-weight: bold;
  color: #222;
}
.role-tag {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 16rpx;
  margin-left: 8rpx;
  color: #fff;
}
.role-tag.admin {
  background: #ffb600;
}
.role-tag.student {
  background: #4b6cff;
}
.phone, .card {
  font-size: 26rpx;
  color: #666;
  margin-top: 4rpx;
}
.info-action {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}
.edit-btn {
  background: #4b6cff;
  color: #fff;
  border-radius: 8rpx;
  font-size: 26rpx;
  margin-bottom: 8rpx;
}
.delete-btn {
  background: #ff5757;
  color: #fff;
  border-radius: 8rpx;
  font-size: 26rpx;
}