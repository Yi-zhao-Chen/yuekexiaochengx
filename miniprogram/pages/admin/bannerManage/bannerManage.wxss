.banner-manage {
  padding: 24rpx;
}
.add-section {
  margin-bottom: 32rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}
.preview-img {
  width: 320rpx;
  height: 180rpx;
  margin: 12rpx 0;
  border-radius: 12rpx;
  object-fit: cover;
  border: 1rpx solid #ddd;
}
.banner-list {
  margin-top: 24rpx;
}
.banner-row {
  display: flex;
  align-items: center;
  margin-bottom: 18rpx;
  padding: 18rpx 0;
  border-bottom: 1rpx solid #f4f4f4;
}
.banner-thumb {
  width: 120rpx;
  height: 70rpx;
  border-radius: 8rpx;
  object-fit: cover;
  margin-right: 18rpx;
  border: 1rpx solid #eee;
}
.banner-info {
  flex: 1;
}