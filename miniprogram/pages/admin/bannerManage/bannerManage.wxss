.container { padding: 32rpx; }
.title { font-size: 36rpx; font-weight: bold; margin-bottom: 24rpx; }
.banner-list { display: flex; flex-wrap: wrap; gap: 24rpx; }
.banner-item { position: relative; margin-bottom: 24rpx; }
.banner-img { width: 320rpx; height: 180rpx; border-radius: 12rpx; }
.del-btn { position: absolute; top: 10rpx; right: 10rpx; }
.add-btn { margin-top: 32rpx; width: 100%; background: #1aad19; color: #fff; }
.empty-tip { text-align: center; color: #bbb; margin-bottom: 48rpx; }