<view class="trial-container">
  <view class="trial-title">体验课报名</view>
  <form bindsubmit="onSubmit">
    <view class="form-item">
      <text>姓名</text>
      <input name="name" placeholder="请输入姓名" maxlength="10" required/>
    </view>
    <view class="form-item">
      <text>手机号</text>
      <input name="mobile" type="number" maxlength="11" placeholder="请输入手机号" required/>
    </view>
    <view class="form-item">
      <text>预约时间</text>
      <picker mode="date" name="date" bindchange="onDateChange">
        <view class="picker-view">{{date || "请选择日期"}}</view>
      </picker>
    </view>
    <view class="form-item">
      <text>备注</text>
      <textarea name="remark" placeholder="可填写体验课需求" maxlength="50"></textarea>
    </view>
    <button form-type="submit" type="primary" class="submit-btn">提交报名</button>
  </form>
</view>
