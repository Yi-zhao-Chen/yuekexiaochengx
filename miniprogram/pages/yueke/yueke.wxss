.container { padding: 24rpx; }
.type-bar { display: flex; margin-bottom: 18rpx; }
.type-btn { flex: 1; margin-right: 18rpx; border-radius: 20rpx; background: #f7f7fa; color: #7c3aed; font-size: 30rpx; }
.type-btn.active { background: linear-gradient(90deg,#753a88,#f2c2ff); color: #fff; }
.week-switch-bar { display: flex; margin-bottom: 12rpx; }
.week-btn { flex: 1; margin-right: 18rpx; border-radius: 20rpx; background: #f7f7fa; color: #753a88; font-size: 28rpx; }
.week-btn.active { background: #753a88; color: #fff; }
.date-bar { margin-bottom: 18rpx; }
.date-btn { margin-right: 12rpx; padding: 8rpx 22rpx; border-radius: 12rpx; border: 1px solid #eee; color: #753a88; background: #f7f7fa; }
.date-btn.active { background: #753a88; color: #fff; border: none; }
.lessons-title { font-size: 28rpx; font-weight: bold; margin-bottom: 18rpx; color: #753a88; }
.lesson-list { }
.lesson-card { background: #f8f6fd; border-radius: 16rpx; margin-bottom: 20rpx; padding: 24rpx; box-shadow: 0 2rpx 10rpx #eee; }
.lesson-time { font-size: 28rpx; color: #333; margin-bottom: 8rpx; }
.lesson-info { font-size: 26rpx; color: #666; margin-bottom: 5rpx; }
.lesson-label { color: #753a88; font-weight: bold; margin-right: 8rpx; }
.btn-bar { margin-top: 16rpx; display: flex; gap: 8rpx; }
.book-btn { background: linear-gradient(90deg,#753a88,#f2c2ff); color: #fff; border-radius: 8rpx; }
.book-btn.full { background: #eee; color: #bbb; }
.cancel-btn { background: #fff3f3; color: #f56c6c; border-radius: 8rpx; }
.empty-tip { color: #aaa; text-align: center; margin-top: 32rpx; font-size: 26rpx; }