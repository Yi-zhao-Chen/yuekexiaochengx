/* pages/my/my.wxss */
.profile-container {
  padding: 20rpx;
  background: #f7f7f7;
  min-height: 100vh;
}
.profile-header {
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.04);
  margin-bottom: 32rpx;
}
.profile-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-right: 36rpx;
  background: #eee;
}
.profile-info {
  flex: 1;
}
.profile-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #2a2a2a;
}
.profile-phone {
  font-size: 28rpx;
  color: #888;
  margin-top: 6rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  margin: 24rpx 0 18rpx 0;
  color: #2456e2;
}

.card-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.04);
}
.card-item {
  border-bottom: 1rpx solid #f0f0f0;
  padding: 18rpx 0;
  display: flex;
  flex-direction: column;
}
.card-label {
  font-size: 28rpx;
  color: #2a2a2a;
}
.card-category,
.card-remain,
.card-expire,
.card-remain-days {
  font-size: 24rpx;
  color: #666;
  margin-top: 4rpx;
}

.history-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.04);
}
.history-item {
  border-bottom: 1rpx solid #f0f0f0;
  padding: 18rpx 0;
  font-size: 26rpx;
  color: #333;
}
.no-history {
  text-align: center;
  color: #aaa;
  padding: 28rpx 0;
}