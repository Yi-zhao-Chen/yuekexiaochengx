/* pages/studentHome/studentHome.wxss */
.container {
  padding: 24rpx;
  background: #f7f7fa;
  min-height: 100vh;
}

.banner-swiper {
  width: 100%;
  height: 280rpx;
  border-radius: 18rpx;
  overflow: hidden;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 16rpx #eee;
}

.banner-img {
  width: 100%;
  height: 280rpx;
  object-fit: cover;
  border-radius: 18rpx;
}

.card {
  background: #fff;
  border-radius: 18rpx;
  box-shadow: 0 2rpx 12rpx #eee;
  padding: 22rpx 18rpx;
  margin-bottom: 24rpx;
}

.company-info {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.company-name {
  font-size: 34rpx;
  font-weight: bold;
  color: #222;
  margin-bottom: 10rpx;
}

.address {
  display: flex;
  align-items: center;
  color: #888;
  font-size: 22rpx;
}

.quick-actions {
  display: flex;
  gap: 32rpx;
  justify-content: center;
  margin-bottom: 16rpx;
}

.action-item {
  flex: 1;
  display: flex;
  justify-content: center;
}

.icon-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #f2fbf7;
  border-radius: 14rpx;
  padding: 14rpx 0;
  box-shadow: 0 1rpx 8rpx #e6f7ee;
  width: 130rpx;
  border: none;
}

.icon-btn image {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 6rpx;
}

.icon-16 {
  width: 16rpx;
  height: 16rpx;
  margin-right: 6rpx;
}

.icon-40 {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 4rpx;
}

.teachers-section {
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 14rpx;
}

.teachers-scroll {
  display: flex;
  flex-direction: row;
  white-space: nowrap;
  overflow-x: auto;
  padding-bottom: 12rpx;
}

.teacher-item {
  display: inline-block;
  margin-right: 18rpx;
}

.teacher-btn {
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 16rpx #eee;
  padding: 16rpx 10rpx;
  width: 120rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  border: none;
}

.teacher-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-bottom: 8rpx;
  object-fit: cover;
  background: #f7f7fa;
}

.teacher-name {
  font-size: 22rpx;
  font-weight: bold;
  color: #222;
  margin-bottom: 4rpx;
}

.teacher-skills {
  font-size: 18rpx;
  color: #1aad19;
  margin-top: 2rpx;
}

.about-us {
  margin-bottom: 24rpx;
}

.contact-info {
  font-size: 20rpx;
  color: #555;
  margin-bottom: 8rpx;
  display: flex;
  align-items: center;
}