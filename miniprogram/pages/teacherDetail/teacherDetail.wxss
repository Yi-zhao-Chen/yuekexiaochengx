.container {
  padding: 30rpx;
  background-color: #f8f8f8;
}

.avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 100rpx;
  margin: 0 auto 20rpx;
  display: block;
}

.name {
  text-align: center;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.skills {
  text-align: center;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  color: #333;
}

.intro-section {
  margin-bottom: 30rpx;
}

.intro {
  font-size: 28rpx;
  color: #444;
  line-height: 1.6;
}

.video-player {
  width: 100%;
  height: 400rpx;
  border-radius: 12rpx;
  background-color: #000;
}
