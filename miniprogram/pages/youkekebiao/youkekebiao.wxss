.container {
  padding: 24rpx;
  background: #f7f7fa;
  min-height: 100vh;
}
.top-tip {
  text-align: center;
  margin-bottom: 18rpx;
}
.public-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 6rpx;
}
.public-desc {
  color: #1aad19;
  font-size: 20rpx;
}
.tab-bar {
  display: flex;
  gap: 20rpx;
  margin-bottom: 12rpx;
}
.tab {
  flex: 1;
  padding: 16rpx 8rpx;
  border-radius: 14rpx 14rpx 0 0;
  text-align: center;
  font-size: 22rpx;
  font-weight: bold;
  box-shadow: 0 2rpx 4rpx #eee;
}
.week-bar {
  display: flex;
  gap: 14rpx;
  margin-bottom: 10rpx;
}
.week-tab {
  flex: 1;
  padding: 12rpx 8rpx;
  border-radius: 10rpx;
  text-align: center;
  font-size: 20rpx;
  font-weight: bold;
}
.table-section {
  background: #fff;
  border-radius: 12rpx;
  padding: 16rpx 10rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 8rpx #eee;
}
.table-title {
  font-size: 22rpx;
  color: #7a3fc3;
  font-weight: bold;
  margin-bottom: 10rpx;
}
.course-row {
  margin-bottom: 12rpx;
}
.course-date {
  font-size: 20rpx;
  color: #a78ee4;
  font-weight: bold;
  margin-bottom: 4rpx;
}
.lesson-card {
  background: #f7f7fa;
  border-radius: 10rpx;
  margin-bottom: 6rpx;
  padding: 10rpx 8rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.lesson-info {
  display: flex;
  flex-direction: column;
}
.lesson-time {
  color: #1aad19;
  font-size: 18rpx;
  margin-bottom: 2rpx;
}
.lesson-content {
  color: #333;
  font-size: 17rpx;
  margin-bottom: 2rpx;
}
.lesson-teacher {
  color: #888;
  font-size: 16rpx;
}
.disabled-btn {
  background: #eee;
  color: #bbb;
  border-radius: 8rpx;
  font-size: 17rpx;
  padding: 6rpx 14rpx;
  border: none;
}
.empty-tip {
  text-align: center;
  color: #bbb;
  font-size: 18rpx;
  margin-top: 34rpx;
}
.bottom-tip {
  margin-top: 32rpx;
  text-align: center;
  font-size: 19rpx;
  color: #888;
}